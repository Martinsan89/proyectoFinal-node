<script>
    const input = document.querySelector("#quantity");
    const mensaje = document.querySelector("#confirmMsg");
    const cartId = document.querySelector(".toCart").getAttribute('data-cart');

    async function addToCart(product) {

        const quantity = input.value;

        const response = await fetch(`http://localhost:8080/api/carts/${cartId}`, {
        method: 'PUT',
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({ 
            product, 
            quantity})
        })
        
        if(response.ok){
            window.location.href = `http://localhost:8080/carts/${cartId}`
        }else {
            mensaje.innerHTML = '<p>Error al agregar el producto al carrito</p>'
        }
    }
</script>

