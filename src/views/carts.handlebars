<div>
     <div>
        <a class="btn" href="/">HOME</a>
    </div>
    <div class="header">
        <h1>Carrito</h1>
        <h3>Id: {{cId}}</h3>
    </div>
    <div class="homeContainer">
        <div class="productContainer">
        {{#each products}}
            <div class="product">
                <div class="productContent">
                    <h3 class="prodItem">{{this.title}}</h3>
                    <img class="prodImg" src={{this.thumbnail}} alt={{this.title}}>
                    <h4 class="prodItem">Code: {{this.code}}</h4>
                    <h4 class="prodItem">Description: {{this.description}}</h4>
                    <h4 class="prodItem">$ {{this.price}}</h4>
                    {{#each quantity}}
                    <h4 class="prodItem">Quantity: {{this.qty}}</h4>
                    {{/each}}
                </div>
            </div>
        {{/each}}
        </div>
    </div>
    <div>
        <button class="btn" value={{cId}} onclick="purchase(value)">Buy products</button>
    </div>
    <div id="confirmMsg"></div>
</div>

<script>

    const mensaje = document.querySelector("#confirmMsg");
    async function purchase(value){
        const response = await fetch(`http://localhost:8080/api/carts/${value}/purchase`, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
    })
    response
      .json()
      .then((d) => mensaje.innerHTML = '<p>Compra realiza con Ã©xito</p>')
      .catch((err) => mensaje.innerHTML = `<p>${err}</p>`)
    }
</script>

